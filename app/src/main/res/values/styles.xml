<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_color</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Bottom navigation -->
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>

        <!-- Material components -->
        <item name="materialCardViewStyle">@style/CustomCardView</item>
        <item name="textInputStyle">@style/CustomTextInputLayout</item>
        <item name="materialButtonStyle">@style/CustomButton</item>
    </style>

    <!-- NoActionBar theme -->
    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Bottom Navigation -->
    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_selected</item>
        <item name="itemTextColor">@color/bottom_nav_unselected</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="elevation">8dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Custom Card View -->
    <style name="CustomCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">3dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Custom Text Input Layout -->
    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/input_stroke_color</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <!-- Custom Button -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Gradient Card Style -->
    <style name="GradientCard">
        <item name="android:background">@drawable/gradient_card</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Header Text Style -->
    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body Text Style -->
    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Caption Text Style -->
    <style name="CaptionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Floating Action Button Style -->
    <style name="CustomFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/fab_color</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/fab_ripple_color</item>
    </style>

    <!-- Tab Layout Style -->
    <style name="CustomTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/primary_color</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/primary_color</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabRippleColor">@color/primary_light</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Empty State Style -->
    <style name="EmptyStateText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Amount Text Style -->
    <style name="AmountText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Category Icon Style -->
    <style name="CategoryIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/category_icon_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>